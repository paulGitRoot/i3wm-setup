for_window [class="Blueman-manager"] resize set width 200 px height 400 px

# Media player (mpv)
for_window [class="mpv"] floating enable
for_window [class="mpv"] move position center
# =========================
# Telegram floating on left
# =========================
for_window [class="TelegramDesktop"] floating enable, move position 16 12, resize set 900 1000
